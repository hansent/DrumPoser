#:kivy 1.0

<MainMenu>:
    BoxLayout:
        orientation: 'vertical'

        Button:
            text: 'Beat Composer'
            on_press: root.app.goto_screen("editor")
        Button:
            text: 'Beat Trainer'
            on_press: root.app.goto_screen("teachme")


<EditorScreen>:
	FloatLayout:
#		orientation: 'vertical'
        
        BoxLayout:
            size_hint: 1,0.05
            pos_hint: {'top': 1}
            orientation: 'horizontal'
            Label:
                text: 'Time signature:'
                size_hint: 0.15,1
            TextInput:
                size_hint: 0.05,1
                id: timevalue1
                multiline: False
                text: '4'
                on_text_validate: root.app.goto_screen("menu")
            Label:
                size_hint:0.05,1
                text: '/'
            TextInput:
                size_hint: 0.05,1
                id: timevalue2
                multiline: False
                text: '4'
                on_text_validate: root.app.goto_screen("menu")
            
            Label:
                text: 'Tempo'
                size_hint:0.15,1
            TextInput:
                size_hint: 0.05,1
                id: tempovalue
                text: '100'
                multiline: False
                on_text_validate: root.app.goto_screen("menu")
            
            Label:
                text: 'Grid columns:'
                size_hint: 0.15,1
            TextInput
                size_hint: 0.05,1
                id: gridcount
                text: '4'
                multiline: False
                on_text_validate: root.app.goto_screen("menu")
            
            Label: 
                text: 'Note length'
                size_hint: 0.15,1
            Button:
                size_hint: 0.08,1
                text: '1/1'
                group: 'notes'
                #on_press - change to new note length, cycle
                    
		BoxLayout:
            size_hint: 1,0.85
            pos_hint: {'top': .95}
			orientation: 'horizontal'
			Button:
                size_hint: 0.05,1
				text: '<<'
            
            BoxLayout:
                #Instrument list - will become autogenerated
                size_hint: 0.25,1
                id: instrument_list
                orientation: 'vertical'
            
            BoxLayout:
                
                orientation: 'horizontal'
                id: bar_editor_layout
                
                BoxLayout:
                    #Instrument toggles - wil become autogenerated
                    orientation: 'vertical'
                    ToggleButton:
                    ToggleButton:
                    ToggleButton:
                    ToggleButton:
                    ToggleButton:
                BoxLayout:
                    #Instrument toggles - wil become autogenerated
                    orientation: 'vertical'
                    ToggleButton:
                    ToggleButton:
                    ToggleButton:
                    ToggleButton:
                    ToggleButton:
                BoxLayout:
                    #Instrument toggles - wil become autogenerated
                    orientation: 'vertical'
                    ToggleButton:
                    ToggleButton:
                    ToggleButton:
                    ToggleButton:
                    ToggleButton:
                BoxLayout:
                    #Instrument toggles - wil become autogenerated
                    orientation: 'vertical'
                    ToggleButton:
                    ToggleButton:
                    ToggleButton:
                    ToggleButton:
                    ToggleButton:
                
			Button:
				text: '>>'
                size_hint: 0.05,1
                
		BoxLayout:
            size_hint: 1,0.1
			orientation: 'horizontal'
			Button:
				text: 'Back to Main'
				on_press: root.app.goto_screen("menu")
			Button:
				text: '<'
			ToggleButton:
				text: '||>'
			Button:
				text: '>'
			Button:
				text: 'Actions'
			

<TeachMeScreen>:
	BoxLayout:
		orientation: 'vertical'		
	
		BoxLayout:
			orientation: 'horizontal'
			
			ToggleButton:
				id: lefthand
				font_size: 24
				text: 'Left Hand'

			ToggleButton:
				id: righthand
				font_size: 24
				text: 'Right Hand'

		BoxLayout:
			orientation: 'horizontal'
			
			ToggleButton:
				font_size: 24
				text: 'Left Foot'
			ToggleButton:
				font_size: 24
				text: 'Right Foot\nBass Drum'

        BoxLayout:
            orientation: 'horizontal'
                
            Button:
                text: "Back to main"
                on_press: root.app.goto_screen("menu")
            Button:
                text: "Help"
            ToggleButton:
                text: 'Play Instruments'
            ToggleButton:
                text: 'Play Metronome'
            Button:
                text: "Actions"
                

#:kivy 1.0

<MainMenu>:
    BoxLayout:
        orientation: 'vertical'

        Button:
            text: 'Beat Composer'
            on_press: root.new_beat()
        Button:
            text: 'Beat Trainer'
            on_press: root.app.goto_screen("teachme")


<EditorScreen>:
	BoxLayout:
		orientation: 'vertical'
        
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Time signature:'
            TextInput:
                id: timevalue1
                multiline: False
                text: '4'
                on_text_validate: root.app.goto_screen("menu")
            Label:
                text: '/'
            TextInput:
                id: timevalue2
                multiline: False
                text: '4'
                on_text_validate: root.app.goto_screen("menu")
            
            Label:
                text: 'Tempo'
            TextInput:
                id: tempovalue
                text: '100'
                multiline: False
                on_text_validate: root.app.goto_screen("menu")
            
            Label:
                text: 'Grid columns:'
            TextInput
                id: gridcount
                text: '4'
                multiline: False
                on_text_validate: root.app.goto_screen("menu")
            
            Label: 
                text: 'Note length'
            ToggleButton:
                text: '1/1'
                group: 'notes'
            ToggleButton:
                text: '1/2'
                group: 'notes'
            ToggleButton:
                text: '1/4'
                group: 'notes'
            ToggleButton:
                text: '1/8'
                group: 'notes'
            ToggleButton:
                text: '1/16'
                group: 'notes'
            ToggleButton:
                text: '1/32'
                group: 'notes'
                    
		BoxLayout:
			orientation: 'horizontal'
			Button:
				text: '<<'
            
            BoxLayout:
                #Instrument list - will become autogenerated
                id: instrument_list
                orientation: 'vertical'
                Label:
                    text: 'Open High-Hat'
                Label:
                    text: 'Closed High-Hat'
                Label: 
                    text: 'High-hat pedal'
                Label:
                    text: 'Snare drum'
                Label:
                    text: 'Bass drum'
                    
            
            BoxLayout:
                orientation: 'horizontal'
                id: bar_editor_layout
                
                BoxLayout:
                    #Instrument toggles - wil become autogenerated
                    orientation: 'vertical'
                    ToggleButton:
                    ToggleButton:
                    ToggleButton:
                    ToggleButton:
                    ToggleButton:
                BoxLayout:
                    #Instrument toggles - wil become autogenerated
                    orientation: 'vertical'
                    ToggleButton:
                    ToggleButton:
                    ToggleButton:
                    ToggleButton:
                    ToggleButton:
                BoxLayout:
                    #Instrument toggles - wil become autogenerated
                    orientation: 'vertical'
                    ToggleButton:
                    ToggleButton:
                    ToggleButton:
                    ToggleButton:
                    ToggleButton:
                BoxLayout:
                    #Instrument toggles - wil become autogenerated
                    orientation: 'vertical'
                    ToggleButton:
                    ToggleButton:
                    ToggleButton:
                    ToggleButton:
                    ToggleButton:
                
			Button:
				text: '>>'
                
		BoxLayout:
			orientation: 'horizontal'
			Button:
				text: 'Back to Main'
				on_press: root.app.goto_screen("menu")
			Button:
				text: '<'
			ToggleButton:
				text: '||>'
			Button:
				text: '>'
			Button:
				text: 'Actions'
			

<TeachMeScreen>:
	BoxLayout:
		orientation: 'vertical'		
	
		BoxLayout:
			orientation: 'horizontal'
			
			ToggleButton:
				id: lefthand
				font_size: 24
				text: 'Left Hand'

			ToggleButton:
				id: righthand
				font_size: 24
				text: 'Right Hand'

		BoxLayout:
			orientation: 'horizontal'
			
			ToggleButton:
				font_size: 24
				text: 'Left Foot'
			ToggleButton:
				font_size: 24
				text: 'Right Foot\nBass Drum'

        BoxLayout:
            orientation: 'horizontal'
                
            Button:
                text: "Back to main"
                on_press: root.app.goto_screen("menu")
            Button:
                text: "Help"
            ToggleButton:
                text: 'Play Instruments'
            ToggleButton:
                text: 'Play Metronome'
            Button:
                text: "Actions"
                

#:kivy 1.0

<MainMenu>:
    BoxLayout:
        orientation: 'vertical'

        Button:
            text: 'Compose new beat'
            on_press: root.new_beat()
        Button:
            text: 'Load and edit beat'
            on_press: root.app.goto_screen("load")
        Button:
            text: 'Teach me how to play a beat'
            on_press: root.app.goto_screen("teachme")


<EditorScreen>:
    BoxLayout:
        orientation: 'vertical'
        
        Button:
            text: 'Bleh'
        Button:
            text: 'Back to Main'
            on_press: root.app.goto_screen("menu")


<LoadScreen>:
    BoxLayout:
        orientation: 'vertical'
     
        Button:
            text: 'Load Something'
        Button:
            text: 'Load Something Else'
        Button:
            text: 'Back to Main'
            on_press: root.app.goto_screen("menu")


<TeachMeScreen>:
	BoxLayout:
		orientation: 'vertical'		
	
		BoxLayout:
			orientation: 'horizontal'
			
			Label:
				font_size: 24
				text: 'Left Hand'
			Label:
				font_size: 24
				text: 'Right Hand'

		BoxLayout:
			orientation: 'horizontal'
			
			Label:
				font_size: 24
				text: 'Left Foot'
			Label:
				font_size: 24
				text: 'Right Foot'

		Button:
			text: "Back to main"
			on_press: root.app.goto_screen("menu")
		
